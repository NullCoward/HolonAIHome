<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HolonAI</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --bg-void: #0a0a0f;
            --lightning-primary: #00d4ff;
            --lightning-secondary: #0088ff;
            --foam-1: #00ffcc;
            --foam-2: #00d4ff;
            --foam-3: #4488ff;
            --foam-4: #00ffaa;
            --text-inactive: #3a3a4a;
            --glass-border: rgba(255, 255, 255, 0.08);
            --glass-bg: rgba(10, 10, 20, 0.6);
        }

        body {
            background: var(--bg-void);
            min-height: 100vh;
            overflow: hidden;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            color: #fff;
        }

        /* ============================================
           LAYER 0: Deep Void Background
           ============================================ */
        .void-bg {
            position: fixed;
            inset: 0;
            background: radial-gradient(ellipse at 50% 50%, #0d0d15 0%, var(--bg-void) 70%);
            z-index: 0;
        }

        /* ============================================
           LAYER 1: 3D Wave Neural Mesh
           ============================================ */
        .wave-container {
            position: fixed;
            inset: 0;
            z-index: 1;
            perspective: 1000px;
            perspective-origin: 50% 30%;
            overflow: hidden;
        }

        .wave-plane {
            position: absolute;
            width: 300vw;
            height: 300vh;
            left: -100vw;
            top: -50vh;
            transform-style: preserve-3d;
            transform: rotateX(70deg) translateY(-20%);
            animation: waveFloat 25s ease-in-out infinite;
        }

        @keyframes waveFloat {
            0%, 100% {
                transform: rotateX(70deg) translateY(-20%) translateZ(0px);
            }
            25% {
                transform: rotateX(71deg) translateY(-21%) translateZ(20px);
            }
            50% {
                transform: rotateX(69deg) translateY(-19%) translateZ(-10px);
            }
            75% {
                transform: rotateX(70.5deg) translateY(-20.5%) translateZ(15px);
            }
        }

        /* Neural mesh pattern - SVG-based grid */
        .neural-mesh {
            position: absolute;
            inset: 0;
            background-image:
                radial-gradient(circle at center, rgba(0, 212, 255, 0.15) 1px, transparent 1px),
                radial-gradient(circle at center, rgba(0, 212, 255, 0.08) 2px, transparent 2px);
            background-size: 60px 60px, 120px 120px;
            background-position: 0 0, 30px 30px;
            opacity: 0.4;
            animation: meshDrift 20s linear infinite;
        }

        @keyframes meshDrift {
            0% {
                background-position: 0 0, 30px 30px;
            }
            100% {
                background-position: 60px 60px, 90px 90px;
            }
        }

        /* Neural connection lines */
        .neural-lines {
            position: absolute;
            inset: 0;
            opacity: 0.12;
            background-image:
                linear-gradient(30deg, transparent 49.5%, rgba(0, 212, 255, 0.3) 49.5%, rgba(0, 212, 255, 0.3) 50.5%, transparent 50.5%),
                linear-gradient(-30deg, transparent 49.5%, rgba(0, 212, 255, 0.3) 49.5%, rgba(0, 212, 255, 0.3) 50.5%, transparent 50.5%),
                linear-gradient(90deg, transparent 49.5%, rgba(0, 212, 255, 0.2) 49.5%, rgba(0, 212, 255, 0.2) 50.5%, transparent 50.5%);
            background-size: 100px 100px, 100px 100px, 80px 80px;
            animation: linesDrift 30s linear infinite;
        }

        @keyframes linesDrift {
            0% { background-position: 0 0; }
            100% { background-position: 100px 100px; }
        }

        /* Secondary wave layer for depth */
        .wave-plane-secondary {
            position: absolute;
            width: 300vw;
            height: 300vh;
            left: -100vw;
            top: -30vh;
            transform-style: preserve-3d;
            transform: rotateX(75deg) translateY(-30%) translateZ(-200px);
            animation: waveFloat2 17s ease-in-out infinite;
            opacity: 0.3;
        }

        @keyframes waveFloat2 {
            0%, 100% {
                transform: rotateX(75deg) translateY(-30%) translateZ(-200px);
            }
            50% {
                transform: rotateX(74deg) translateY(-31%) translateZ(-180px);
            }
        }

        /* Depth fade overlay */
        .depth-fade {
            position: absolute;
            inset: 0;
            background: linear-gradient(
                to bottom,
                transparent 0%,
                transparent 20%,
                rgba(10, 10, 15, 0.3) 50%,
                rgba(10, 10, 15, 0.7) 80%,
                var(--bg-void) 100%
            );
            z-index: 2;
            pointer-events: none;
        }

        /* ============================================
           Lightning Flash System
           ============================================ */
        .lightning-container {
            position: fixed;
            inset: 0;
            z-index: 3;
            pointer-events: none;
            overflow: hidden;
        }

        .lightning-flash {
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(ellipse at center,
                rgba(0, 212, 255, 0.4) 0%,
                rgba(0, 136, 255, 0.2) 30%,
                transparent 70%);
            filter: blur(40px);
            opacity: 0;
            transform: scale(0.8);
            transition: none;
        }

        .lightning-flash.active {
            animation: flashPulse 0.4s ease-out forwards;
        }

        @keyframes flashPulse {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }
            20% {
                opacity: 1;
                transform: scale(1);
            }
            100% {
                opacity: 0;
                transform: scale(1.2);
            }
        }

        /* ============================================
           LAYER 2: Content
           ============================================ */
        .content {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 2rem 3rem;
            display: flex;
            justify-content: center;
            gap: 3rem;
            z-index: 20;
        }

        .nav-link {
            position: relative;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            letter-spacing: 0.05em;
            color: var(--text-inactive);
            transition: color 0.3s ease;
            cursor: pointer;
            padding: 0.5rem 1rem;
        }

        .nav-link-text {
            position: relative;
            display: inline-block;
            background: linear-gradient(
                90deg,
                var(--foam-1),
                var(--foam-2),
                var(--foam-3),
                var(--foam-4),
                var(--foam-1)
            );
            background-size: 400% 100%;
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            opacity: 0;
            transition: opacity 0.4s ease;
            animation: foamFlow 8s linear infinite;
            animation-play-state: paused;
        }

        .nav-link-base {
            position: absolute;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.4s ease;
        }

        .nav-link:hover .nav-link-text,
        .nav-link.proximity .nav-link-text {
            opacity: 1;
            animation-play-state: running;
        }

        .nav-link:hover .nav-link-base,
        .nav-link.proximity .nav-link-base {
            opacity: 0;
        }

        @keyframes foamFlow {
            0% { background-position: 0% 50%; }
            100% { background-position: 400% 50%; }
        }

        /* Glow effect on proximity */
        .nav-link::after {
            content: '';
            position: absolute;
            inset: -10px;
            background: radial-gradient(ellipse at center,
                rgba(0, 212, 255, 0.15) 0%,
                transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
            pointer-events: none;
            border-radius: 20px;
        }

        .nav-link.proximity::after {
            opacity: var(--proximity-intensity, 0);
        }

        /* Logo Container */
        .logo-container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

                .logo-glass {
            position: relative;
            width: 260px;
            height: 260px;
            border-radius: 50%;
            background: linear-gradient(145deg, rgba(20, 20, 30, 0.95), rgba(8, 8, 15, 0.98));
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow:
                inset 0 1px 2px rgba(255, 255, 255, 0.08),
                inset 0 -2px 6px rgba(0, 0, 0, 0.4),
                0 8px 32px rgba(0, 0, 0, 0.6),
                0 0 1px rgba(255, 255, 255, 0.1);
            transition: box-shadow 0.15s ease-out;
        }

        .logo-glass::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 50%;
            background: linear-gradient(150deg, rgba(255, 255, 255, 0.06) 0%, transparent 50%);
            pointer-events: none;
            z-index: 10;
        }

        .logo-glass.lightning-active {
            box-shadow:
                inset 0 1px 2px rgba(255, 255, 255, 0.12),
                inset 0 -2px 6px rgba(0, 0, 0, 0.4),
                0 8px 32px rgba(0, 0, 0, 0.6),
                0 0 60px rgba(0, 212, 255, 0.15),
                0 0 100px rgba(0, 212, 255, 0.08);
        }

        .logo-pattern-container {
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .logo-svg {
            width: 100%;
            height: 100%;
        }

        .logo-svg .knot-path {
            fill: none;
            stroke: rgba(180, 185, 195, 0.85);
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        .logo-svg .center-dot {
            fill: rgba(200, 205, 215, 0.95);
        }

        .logo-glass.lightning-active .knot-path {
            stroke: rgba(200, 235, 255, 1);
        }

        .logo-glass.lightning-active .center-dot {
            fill: rgba(210, 240, 255, 1);
        }

        .logo-text {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 0.3em;
            color: rgba(255, 255, 255, 0.9);
            text-transform: uppercase;
        }

        /* ============================================
           Responsive
           ============================================ */
        @media (max-width: 768px) {
            nav {
                flex-wrap: wrap;
                gap: 1.5rem;
                padding: 1.5rem;
            }

            .nav-link {
                font-size: 0.9rem;
            }

            .logo-glass {
                width: 180px;
                height: 180px;
            }

            .logo-text {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Layer 0: Void -->
    <div class="void-bg"></div>

    <!-- Layer 1: 3D Wave Neural Mesh -->
    <div class="wave-container">
        <div class="wave-plane">
            <div class="neural-mesh"></div>
            <div class="neural-lines"></div>
        </div>
        <div class="wave-plane-secondary">
            <div class="neural-mesh"></div>
        </div>
        <div class="depth-fade"></div>
    </div>

    <!-- Lightning System -->
    <div class="lightning-container" id="lightning-container"></div>

    <!-- Layer 2: Content -->
    <div class="content">
        <nav id="nav">
            <a href="#" class="nav-link" data-project="aichatroom">
                <span class="nav-link-base">AIChatRoom</span>
                <span class="nav-link-text">AIChatRoom</span>
            </a>
            <a href="#" class="nav-link" data-project="wikiholon">
                <span class="nav-link-base">WikiHolon</span>
                <span class="nav-link-text">WikiHolon</span>
            </a>
            <a href="#" class="nav-link" data-project="neuralforge">
                <span class="nav-link-base">NeuralForge</span>
                <span class="nav-link-text">NeuralForge</span>
            </a>
            <a href="#" class="nav-link" data-project="synapse">
                <span class="nav-link-base">Synapse</span>
                <span class="nav-link-text">Synapse</span>
            </a>
        </nav>

        <div class="logo-container">
                        <div class="logo-glass" id="logo-glass">
                <div class="logo-pattern-container" id="pattern-container">
                    <svg class="logo-svg" id="logo-knot" viewBox="-50 -50 100 100" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <clipPath id="sphere-clip"><circle cx="0" cy="0" r="49"/></clipPath>
                            <radialGradient id="edge-fade" cx="50%" cy="50%" r="50%">
                                <stop offset="0%" stop-color="white" stop-opacity="1"/>
                                <stop offset="75%" stop-color="white" stop-opacity="1"/>
                                <stop offset="95%" stop-color="white" stop-opacity="0.3"/>
                                <stop offset="100%" stop-color="white" stop-opacity="0"/>
                            </radialGradient>
                            <mask id="edge-mask"><circle cx="0" cy="0" r="50" fill="url(#edge-fade)"/></mask>
                        </defs>
                        <g clip-path="url(#sphere-clip)" mask="url(#edge-mask)">
                            <g id="knot-pattern"></g>
                        </g>
                        <circle class="center-dot" cx="0" cy="0" r="4"/>
                    </svg>
                </div>
            </div>
            <div class="logo-text">HolonAI</div>
        </div>
    </div>

    <script>
        // ============================================
        // Lightning Flash System
        // ============================================
        const lightningContainer = document.getElementById('lightning-container');
        const logoGlass = document.getElementById('logo-glass');

        function createLightningFlash() {
            const flash = document.createElement('div');
            flash.className = 'lightning-flash';

            // Random size
            const size = 200 + Math.random() * 400;
            flash.style.width = `${size}px`;
            flash.style.height = `${size}px`;

            // Random position (favor upper portion for "distant" feel)
            const x = Math.random() * window.innerWidth;
            const y = Math.random() * (window.innerHeight * 0.6);
            flash.style.left = `${x - size/2}px`;
            flash.style.top = `${y - size/2}px`;

            lightningContainer.appendChild(flash);

            // Trigger animation
            requestAnimationFrame(() => {
                flash.classList.add('active');
            });

            // Light up the logo in sync with lightning
            logoGlass.classList.add('lightning-active');
            setTimeout(() => {
                logoGlass.classList.remove('lightning-active');
            }, 400);

            // Clean up
            setTimeout(() => {
                flash.remove();
            }, 500);
        }

        // Random lightning intervals
        function scheduleLightning() {
            const delay = 3000 + Math.random() * 5000; // 3-8 seconds
            setTimeout(() => {
                createLightningFlash();
                // Sometimes double flash
                if (Math.random() > 0.7) {
                    setTimeout(createLightningFlash, 100 + Math.random() * 150);
                }
                scheduleLightning();
            }, delay);
        }

        scheduleLightning();

        // ============================================
        // Mouse Proximity Effect for Nav Links
        // ============================================
        const navLinks = document.querySelectorAll('.nav-link');
        const proximityThreshold = 200; // pixels

        function updateProximity(mouseX, mouseY) {
            navLinks.forEach(link => {
                const rect = link.getBoundingClientRect();
                const linkCenterX = rect.left + rect.width / 2;
                const linkCenterY = rect.top + rect.height / 2;

                const distance = Math.sqrt(
                    Math.pow(mouseX - linkCenterX, 2) +
                    Math.pow(mouseY - linkCenterY, 2)
                );

                if (distance < proximityThreshold) {
                    const intensity = 1 - (distance / proximityThreshold);
                    link.classList.add('proximity');
                    link.style.setProperty('--proximity-intensity', intensity);
                } else {
                    link.classList.remove('proximity');
                    link.style.setProperty('--proximity-intensity', 0);
                }
            });
        }

        document.addEventListener('mousemove', (e) => {
            updateProximity(e.clientX, e.clientY);
        });

        // ============================================
        // Additional wave animation via JS for organic feel
        // ============================================
        const wavePlane = document.querySelector('.wave-plane');
        let time = 0;

        function animateWave() {
            time += 0.005;

            const rotateX = 70 + Math.sin(time * 0.7) * 1.5 + Math.sin(time * 1.1) * 0.5;
            const translateY = -20 + Math.sin(time * 0.5) * 2;
            const translateZ = Math.sin(time * 0.8) * 15 + Math.sin(time * 1.3) * 8;

            wavePlane.style.transform = `rotateX(${rotateX}deg) translateY(${translateY}%) translateZ(${translateZ}px)`;

            requestAnimationFrame(animateWave);
        }

        animateWave();

        // ============================================
        // Tessellating Knot Pattern
        // ============================================
        const knotPattern = document.getElementById('knot-pattern');
        const svgNS = 'http://www.w3.org/2000/svg';

        function createKnotCell(scale) {
            const g = document.createElementNS(svgNS, 'g');
            g.setAttribute('transform', 'scale(' + scale + ')');
            const paths = [
                "M0,-8 C-5,-14 -14,-14 -16,-8 C-18,-2 -12,0 -6,0 C-12,0 -18,2 -16,8 C-14,14 -5,14 0,8",
                "M0,-8 C5,-14 14,-14 16,-8 C18,-2 12,0 6,0 C12,0 18,2 16,8 C14,14 5,14 0,8",
                "M-8,0 C-14,-5 -14,-14 -8,-16 C-2,-18 0,-12 0,-6 C0,-12 2,-18 8,-16 C14,-14 14,-5 8,0",
                "M8,0 C14,-5 14,-14 8,-16 C2,-18 0,-12 0,-6 C0,-12 -2,-18 -8,-16 C-14,-14 -14,-5 -8,0",
                "M-8,0 C-14,5 -14,14 -8,16 C-2,18 0,12 0,6 C0,12 2,18 8,16 C14,14 14,5 8,0",
                "M8,0 C14,5 14,14 8,16 C2,18 0,12 0,6 C0,12 -2,18 -8,16 C-14,14 -14,5 -8,0"
            ];
            paths.forEach(function(d) {
                const path = document.createElementNS(svgNS, 'path');
                path.setAttribute('class', 'knot-path');
                path.setAttribute('d', d);
                g.appendChild(path);
            });
            return g;
        }

        const cells = [];
        const ringConfig = [{n:1, r:0, s:1.0}, {n:8, r:22, s:0.65}, {n:14, r:40, s:0.5}, {n:20, r:58, s:0.4}];

        ringConfig.forEach(function(ring, ri) {
            for (let i = 0; i < ring.n; i++) {
                const angle = (i / ring.n) * Math.PI * 2;
                const cell = createKnotCell(ring.s);
                cell.dataset.ring = ri;
                cell.dataset.idx = i;
                cell.dataset.baseAngle = angle;
                cell.dataset.baseR = ring.r;
                cell.dataset.scale = ring.s;
                knotPattern.appendChild(cell);
                cells.push(cell);
            }
        });

        let pt = 0;
        function animateKnot() {
            pt += 0.004;
            cells.forEach(function(cell) {
                const ri = parseInt(cell.dataset.ring);
                const idx = parseInt(cell.dataset.idx);
                const baseAngle = parseFloat(cell.dataset.baseAngle);
                const baseR = parseFloat(cell.dataset.baseR);
                const scale = parseFloat(cell.dataset.scale);

                const rotDir = ri % 2 === 0 ? 1 : -1;
                const rotSpeed = 0.15 + ri * 0.08;
                const angle = baseAngle + pt * rotSpeed * rotDir;

                const flowSpeed = 8;
                const flowRange = 25;
                const flow = ((pt * flowSpeed + ri * 5 + idx * 0.3) % flowRange);
                let r = baseR + flow;

                let s = scale;
                let op = 1 - ri * 0.12;

                if (r > 48) {
                    const f = (r - 48) / 15;
                    s *= Math.max(0.3, 1 - f * 0.7);
                    op *= Math.max(0, 1 - f);
                }

                const x = Math.cos(angle) * r;
                const y = Math.sin(angle) * r;
                const wobble = Math.sin(pt * 1.5 + idx * 0.5) * 0.8;
                const cellRot = angle * 180 / Math.PI + Math.sin(pt + idx) * 5;

                cell.setAttribute('transform', 'translate(' + (x+wobble) + ',' + (y+wobble) + ') scale(' + s + ') rotate(' + cellRot + ')');
                cell.setAttribute('opacity', op.toFixed(2));
            });
            requestAnimationFrame(animateKnot);
        }
        animateKnot();
    </script>
</body>
</html>
